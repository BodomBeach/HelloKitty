<section id="login-custom"class="module-cover parallax fullscreen text-center" data-overlay="0.65" data-gradient="">
  <div class="container">
    <div class="row">
      <div class="col-lg-4 col-md-6 m-auto">
        <div class="m-b-20">
          <h6>Sign into your account</h6>
        </div>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="m-b-20">
          <form method="post">
            <div class="form-group">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", type:"email", placeholder:"Email" %>
            </div>
            <div class="form-group">

              <%= f.password_field :password, autocomplete: "off", class:"form-control", type:"password", placeholder:"Password" %>
            </div>
            <div class="">
              <% if devise_mapping.rememberable? -%>
                <div class="field">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div>
              <% end -%>
            </div>

            <div class="form-group">
              <div class="actions">
              <%= f.submit "Log in", class:"btn btn-block btn-round btn-brand" %>
              </div>
            </div>

          <% end %>
        </form>
      </div>
      <div class="m-b-20">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
</section>

